---
import Layout from "../../layouts/Layout.astro";

const allPosts = await Astro.glob("./collections/*.md");
const filterAvailable = true;
const filterHidden = true;
// const filterFuturePosts = false;
// const currentDate = new Date();
const title = "Shop Books by Queers";
const description = "A store dedicated to books written by and for queers.";

console.log(allPosts[0].frontmatter.imgs[0]);
---

<Layout title={title} description={description}>
    <section class="mt-24 md:mt-36">
        <h1 class="h1">Store</h1>
        <div class="grid md:grid-cols-2 gap-24 max-w-5xl mx-auto pb-24">
            {
                allPosts.map((post) => {
                    return (
                        <article class="mx-auto">
                            <div class="aspect-[3/4] max-w-xs rounded-lg overflow-hidden shadow-xl">
                               
                            </div>
                            <div class="text-center flex flex-col gap-2">
                                <h2 class="font-semibold text-3xl text-center">
                                    {post.frontmatter.title}
                                </h2>
                                <p class="font-semibold text-xl">
                                    ${post.frontmatter.price}
                                </p>
                                <button class="button">Add to Cart</button>
                            </div>
                        </article>
                    );
                })
            }
        </div>
    </section>
</Layout>
